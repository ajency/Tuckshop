<Alloy>
	 <Window  class="container" >
		<View class="ver top0" height="80%">
			<View class="ver w-fill h-size top1">
				<ImageView class="ts-logo"/>
				
				<Label text="Create my account" class="w-fill ts-brown text-center" top="5.5%"/>
					
				<TextField top="4%"  id="usernameTextfield" class="span13 text-center border-rounded f-s3.3 keyboard-email" 
					hintText="Ajency email id"/>
				<TextField top="2%" id="passwordTextfield" class="span13 text-center border-rounded f-s3.3  keyboard-password" 
					hintText="Password" maxLength="4"/>
				 <ImageView id="animateObject" height="0" width="0" top="0" ></ImageView>
				 <Label  id="registerErrorLabel" class="f-s3" height="0" width="0" top="0">Tap to Retry</Label>
				<Button id="signUpButton" class="span13 ts-brown ts-bg-yellow"  top="2%" onClick="registerClicked"/>
				<Button id="backIcon" platform="ios" top="2%" left="42.5%"  onClick="closeWindow" backgroundImage="/images/left_arrow.png" class="ts-brown" height="10%" width="15%"></Button>
			</View>
		</View>
		
		<View class="hor bottom0 w-fill" height="20%">
			<ImageView image="/images/footer.png" class="w-fill h-fill"/> 
		</View>
		
	 </Window>
</Alloy>